# http://editorconfig.org
root = true

[*]
# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties#max_line_length
# This is not recognized by Visual Studio Code; use .prettierrc.toml instead
max_line_length = 120
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[*.{yml,yaml,json,js,md}]
indent_size = 2

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
